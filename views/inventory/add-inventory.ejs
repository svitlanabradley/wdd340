<h1>
    <%= title %>
</h1>

<%- messages() %>

<% if (errors && errors.length> 0) { %>
    <ul class="errors">
        <% errors.forEach(err=> { %>
            <li>
                <%= err.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<form action="/inv/add-inventory" method="post" class="all-forms">
    <!-- classificationList contains the <select> built in utilities -->
    
    <label for="classificationList">Classification*</label>
    <%- classificationList %>

    <label>Make*<input type="text" id="inv_make" name="inv_make" required value="<%= inv_make %>" title="Enter the vehicle's make (e.g. Toyota, Ford)" placeholder="min of 3 characters" pattern="^[A-Za-z0-9 ]{3,}$"></label>
    
    <label>Model*<input type="text" id="inv_model" name="inv_model" required value="<%= inv_model %>" title="Enter the vehicle's model (e.g. Camry, Mustang)" placeholder="min of 3 characters" pattern="^[A-Za-z0-9 ]{3,}$"></label>
    
    <label>Year*<input type="text" id="inv_year" name="inv_year" required pattern="^\d{4}$" title="Enter 4 digit year" value="<%= inv_year %>" placeholder="4-digit year"></label>
    
    <label>Price (USD)*<input type="number" id="inv_price" name="inv_price" required value="<%= inv_price %>" title="Enter the price in US dollars" placeholder="decimal or integer"></label>
    
    <label>Miles*<input type="number" min="0" step="1" id="inv_miles" name="inv_miles" required value="<%= inv_miles %>" title="Enter the mileage (whole number, no decimals)" placeholder="digits only"></label>
    
    <label>Color*<input type="text" id="inv_color" name="inv_color" required value="<%= inv_color %>" title="Enter the vehicle's color"></label>
    
    <label>Full-size image path<input type="text" id="inv_image" name="inv_image" required value="<%= inv_image %>" title="Enter the file path or URL of the full-size image"></label>
    
    <label>Thumbnail image path<input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= inv_thumbnail %>" title="Enter the file path or URL of the thumbnail image"></label>
    
    <label>Description*<textarea id="inv_description" name="inv_description" rows="6" required title="Enter a detailed description of the vehicle"><%= inv_description %></textarea></label>
    
    <button type="submit">Add Vehicle</button>
</form>

