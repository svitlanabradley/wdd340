<h1>
    <%= title %>
</h1>

<%- messages() %>

<p>
    <% if (errors && errors.length> 0) { %>
        <ul class="errors">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
    <% } %>
</p>

<!-- login form -->
 <form id="loginForm" action="/account/login" method="post" class="all-forms">
    <label>Email*<input type="email" id="account_email" name="account_email" required placeholder="your@email.com" title="Enter a valid email address"></label>
    
    <label>Passsword*<input type="password" id="account_password" name="account_password" placeholder="************" required title="Enter a password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"></label>
    <div class="password-rules">
        <p>Password must:</p>
        <ul>
            <li>be at least 12 characters long</li>
            <li>contain 1 capital letter</li>
            <li>contain 1 number</li>
            <li>contain 1 special character</li>
        </ul>
    </div>
    
    <button type="submit">Login</button>
 </form>

 <p class="register-link">Don't have an account?
    <a href="/account/register">Register here</a>
 </p>