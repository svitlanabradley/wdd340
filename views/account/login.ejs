<h1>
    <%= title %>
</h1>
<p>
    <% if (messages && messages.length> 0) { %>
        <ul class="notice">
            <% messages.forEach(msg=> { %>
                <li>
                    <%= msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>
    <% if (errors && errors.length> 0) { %>
        <ul class="errors">
            <% errors.forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
    <% } %>
</p>

<!-- login form -->
 <form id="loginForm" action="/account/login" method="post" class="all-forms">
    <label>Email*<input type="email" id="email" name="email" required placeholder="your@email.com" title="Enter a valid email address"></label>
    
    <label>Passsword*<input type="password" id="password" name="password" placeholder="************" required title="Enter a password"></label>
    <div class="password-rules">
        <p>Password must:</p>
        <ul>
            <li>be at least 12 characters long</li>
            <li>contain 1 capital letter</li>
            <li>contain 1 number</li>
            <li>contain 1 special character</li>
        </ul>
    </div>

    <button type="submit">Login</button>
 </form>

 <p class="register-link">Don't have an account?
    <a href="/account/register">Register here</a>
 </p>